$(GEN)/gencomp: $(JIT)/gencomp.c $(EMU)/writelog.c $(EMU)/cpudefs.c $(EMU)/readcpu.c
	mkdir -p $(GEN);
	$(CC) $(CFLAGS) $(PLATFLAGS) $(INCDIRS) -UJIT -o $@ $(JIT)/gencomp.c $(EMU)/writelog.c $(EMU)/cpudefs.c $(EMU)/readcpu.c

$(GEN)/comptbl.h $(GEN)/compstbl.c $(GEN)/compemu.c: $(GEN)/gencomp
	(cd $(GEN); ./gencomp)

$(GEN)/gencpu: $(EMU)/gencpu.c
	mkdir -p $(GEN);
	$(CC) $(CFLAGS) $(PLATFLAGS) $(INCDIRS) -UJIT -o $@ $(EMU)/gencpu.c $(EMU)/writelog.c $(EMU)/cpudefs.c $(EMU)/readcpu.c

$(GEN)/cputbl.h: $(GEN)/gencpu
	(cd $(GEN); ./gencpu --optimized-flags)

